@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Вход</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="container">
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">Вход</span>
    </div>
    <div class="m-1 p-1">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="form-group">
                <label asp-for="Login"></label>
                <div asp-validation-for="Login" class="text-danger"></div>
                <input asp-for="Login" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div asp-validation-for="Password" class="text-danger"></div>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <button class="btn btn-primary mt-2" type="submit">Войти</button>
        </form>
    </div>
</body>
</html>